function formatInput(word1,word2,word3,word4){
  if (word1== `Hello {0} {1}`){
  let str = word1.substring(0,5);
  return str+" "+ word2 +" "+ word3}
  else{
    let str = word1.substring(0,10);
    return str+" "+word4}
  }
  
console.log(formatInput( `This is an {2}`,`Halangan`,`Rintangan`,`Exercise`))
console.log(formatInput( `Hello {0} {1}`, `Arkademian`, `Fighters!`))
